<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO: Update blank fragment layout -->
            <!-- Toolbar -->
            <android.support.design.widget.AppBarLayout
                android:id="@+id/daily_pic1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="18dp"
                android:paddingLeft="20dp"
                android:background="@color/blue_btn_color_normal">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_yi_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_me_left"/>

                    <TextView
                        android:id="@+id/qunfa_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址管理"
                        android:textSize="20sp"
                        android:textColor="#f7efef"
                        android:layout_marginLeft="103dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        />
                </LinearLayout>
            </android.support.design.widget.AppBarLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="3dp"-->
                <!--android:background="#4fa19999" >-->
            <!--</View>-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="中南世纪城-世纪花园  崇山区啬园路9号桃园西苑(513号)"
                    android:textSize="16dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="林北玄   17805054367"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="40dp">

                <CheckBox
                    android:id="@+id/box_1"
                    android:background="@drawable/checkbox_selector"
                    android:checked="true"
                    android:button="@null"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    style="@style/MyCheckBox" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认地址"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bianji_1"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="150dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete_1"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="45dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="新城小区 崇川区文峰街道新城小区世纪大道南门66号附2号"
                    android:textSize="16dp"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="林北玄   17805054367"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="40dp">

                <CheckBox
                    android:id="@+id/box_2"
                    android:background="@drawable/checkbox_selector"
                    android:checked="false"
                    android:button="@null"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    style="@style/MyCheckBox" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认地址"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bianji_1"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="150dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete_1"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="45dp"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="257dp"
                android:layout_gravity="bottom"
                android:background="@color/white" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/add_2"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="130dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新增地址"
                    android:textSize="15dp"
                    android:textColor="@color/blue_btn_color_normal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
