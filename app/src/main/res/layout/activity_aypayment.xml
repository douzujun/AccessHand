<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO: Update blank fragment layout -->
            <!-- Toolbar -->
            <android.support.design.widget.AppBarLayout
                android:id="@+id/daily_pic1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:background="@color/blue_btn_color_normal">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_yi_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_me_left"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我的钱包"
                        android:paddingRight="50dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="4dp"
                        android:textSize="24sp"
                        android:textColor="#f7efef"
                        android:background="@color/blue_btn_color_normal"/>
                </LinearLayout>

            </android.support.design.widget.AppBarLayout>

            <!--订单信息-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" >

                <!--第一个订单-->
                <RelativeLayout
                    android:id="@+id/dingdan_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linearangele"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/yu_e_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的余额"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/image_yu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/yu_e_1"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/yu_e_1" />
                    <TextView
                        android:id="@+id/money_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥10.00 "
                        android:textSize="29dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/image_yu"
                        android:layout_below="@+id/yu_e_1"
                        />
                    <TextView
                        android:id="@+id/text_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账单明细"
                        android:layout_toRightOf="@+id/money_text"
                        android:layout_below="@+id/yu_e_1"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="90dp"
                        />
                    <ImageView
                        android:id="@+id/next_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/next_1"
                        android:layout_toRightOf="@+id/money_text"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="160dp"
                        android:layout_below="@+id/yu_e_1" />

                    <!--分割符-->
                    <TextView
                        android:id="@+id/fenge_1"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="25dp"
                        android:layout_below="@+id/image_yu"
                        android:background="#4fa19999"/>

                    <ImageView
                        android:id="@+id/info_jiaoyi_1"
                        android:src="@drawable/info_jiaoyi_1"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/fenge_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交易明细"
                        android:textSize="15dp"
                        android:layout_toRightOf="@id/info_jiaoyi_1"
                        android:layout_below="@id/fenge_1"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="16dp" />
                    <ImageView
                        android:id="@+id/next_3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/next_1"
                        android:layout_below="@+id/fenge_1"
                        android:layout_toRightOf="@+id/info_text"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="216dp" />


                    <!--分割符-->
                    <TextView
                        android:id="@+id/fenge_2"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="80dp"
                        android:layout_below="@+id/image_yu"
                        android:background="#4fa19999"/>

                    <ImageView
                        android:id="@+id/info_jiaoyi_2"
                        android:src="@drawable/hongbao_3"
                        android:layout_marginTop="12dp"
                        android:layout_below="@+id/fenge_2"
                        android:layout_marginLeft="4dp"
                        android:layout_width="22dp"
                        android:layout_height="32dp" />

                    <TextView
                        android:id="@+id/info_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的红包"
                        android:textSize="15dp"
                        android:layout_toRightOf="@id/info_jiaoyi_1"
                        android:layout_below="@id/fenge_2"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/hongbao_1"
                        android:text="1个可用"
                        android:textColor="@color/red_btn_color_pressed"
                        android:layout_below="@+id/fenge_2"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="259dp"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/next_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/next_1"
                        android:layout_below="@+id/fenge_2"
                        android:layout_toRightOf="@+id/info_text"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="216dp" />

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_below="@id/info_text2"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
