<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.douzi.accesshand.MainActivity" >

    <!-- TODO: Update blank fragment layout -->
    <!-- Toolbar -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/my_background6">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_register_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_me_left"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:focusable="true"
            android:paddingRight="30dp"
            android:text="注册"
            android:id="@+id/textView" />
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 撑开顶部因Toolbar而留出的空白 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/phone_register_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textColor="#1c1d1c"
                android:hint="输入您的手机号"
                android:inputType="phone"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:maxLines="1"
                android:maxLength="11"/>
            <Button
                android:id="@+id/send_notice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textColor="#fff"
                android:text="获取验证码"/>

        </LinearLayout>

        <EditText
            android:id="@+id/phone_receive_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textColor="#1c1d1c"
            android:inputType="phone"
            android:hint="输入您的验证码"
            android:maxLines="1"
            android:maxLength="11"/>

        <EditText
            android:id="@+id/phone_register_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textColor="#1c1d1c"
            android:inputType="textPassword"
            android:hint="输入您的密码"
            android:maxLines="1"
            android:maxLength="11"/>


        <!-- Phone页Tip -->
        <TextView
            android:id="@+id/login_help_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:text="关于账号方面的帮助？"/>

        <!-- 下一步 操作按钮 -->
        <Button
            android:id="@+id/icon_register"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:minWidth="98dp"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="注册"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#FFFFFF"
            android:background="#043850"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

    <!-- TODO: 底部logo -->
    <!-- 底部logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@mipmap/domainname"/>

    </LinearLayout>
</RelativeLayout>
