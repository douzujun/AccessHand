<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/beijing1">

        <TextView
            android:id="@+id/icon_phone_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:text="设置"
            android:textSize="16dp"
            android:textColor="#FFF"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_head_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ay1"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/my_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#FFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/my_phone"
            android:gravity="center_horizontal"
            android:text="注册/登陆"
            android:textColor="#FFF"
            android:textSize="15sp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--撑开上面布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#e4dcdc"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--订单简要信息-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp">
                <!--未完成-->
                <LinearLayout
                    android:id="@+id/ic_weiwancheng"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:layout_weight="0.33">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_my_daiwancheng"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未完成"/>
                </LinearLayout>
                <!--已完成-->
                <LinearLayout
                    android:id="@+id/ic_yiwancheng"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:layout_weight="0.33">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_my_yiwancheng"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已完成"/>

                </LinearLayout>
                <!--待评价-->
                <LinearLayout
                    android:id="@+id/ic_daipingjia"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:layout_weight="0.33">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_my_daipingjia"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待评价"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e4dcdc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="必备工具"/>
            <View
                android:id="@+id/view_temp_2"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#d6d6d6"
                />

            <!--第一排图标-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp">
                <!--我的信息-->
                <LinearLayout
                    android:id="@+id/ic_my_info"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/ic_my_info1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="社交资料"/>
                </LinearLayout>
                <!--我的钱包-->
                <LinearLayout
                    android:id="@+id/ic_my_wallet"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/ic_icon_wallet"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="我的钱包"/>

                </LinearLayout>
                <!--我的地址-->
                <LinearLayout
                    android:id="@+id/ic_my_adress"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/ic_my_adress1"
                        android:id="@+id/imageView4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="我的地址"/>
                </LinearLayout>
            </LinearLayout>
            <!--第二排图标-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <!--优惠券-->
                <LinearLayout
                    android:id="@+id/ic_my_youhui"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/ic_youhui3"
                        android:id="@+id/imageView2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="我的群组"/>
                </LinearLayout>
                <!--积分商城-->
                <LinearLayout
                    android:id="@+id/ic_my_jifen"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/jifen2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="积分商城"/>

                </LinearLayout>
                <!--客服与帮助-->
                <LinearLayout
                    android:id="@+id/ic_my_kefu"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/ic_servicer"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="客服与帮助"/>
                </LinearLayout>
            </LinearLayout>
            <!--分割线-->
            <View
                android:id="@+id/view_temp_3"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#d6d6d6" />
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
