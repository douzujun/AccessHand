                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/guzhu_1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:text="收货人:林北玄" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/lianxi_1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/mobile_1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:text="联系方式:17805054367" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/money_1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/money_1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:text="配送费:¥20 (不含小费)" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_yuangong"
                        android:text="快递人信息"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/danhao_1"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/yuangong_1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/guzhu_1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:text="快递人:常大秦" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/lianxi_2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/mobile_1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:text="联系方式:17805035425" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_yuangong_2"
                        android:text="用户信息"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/danhao_1"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/yonghu_3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/guzhu_1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:text="姓名:窦清水" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/lianxi_3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/mobile_1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:text="联系方式:17805034357" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
